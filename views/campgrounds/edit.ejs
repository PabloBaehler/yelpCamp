    <div class="row">

        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= foundCamp.id  %>?_method=PUT " method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
        
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campgroundaaaaaaa[title]" value="<%=foundCamp.title%>" required>
                </div>
        
                <div class="mb-3">
        
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campgroundaaaaaaa[location]"value="<%=foundCamp.location%>">required
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label" >Add Images</label>
                    <input class="form-control" type="file" name="image" id="Images" multiple>
                  </div>
                <div class="mb-3">
                    <label for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" name="campgroundaaaaaaa[price]"value="<%=foundCamp.price%>"required>
                </div>
                </div>
    
                <div class="mb-3">
        
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campgroundaaaaaaa[description]"required><%=foundCamp.description%>required</textarea>
                </div>
                <div class="mb-3">
                    <% foundCamp.images.forEach(function(img,i){ %> 
                        <img src="<%=img.thumbnail%>" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="<%=`image${i}`  %> " value="<%=img.filename%>">
                            <label for="<%=`image${i}`  %> ">Delete</label>
                        </div>
                    <% }) %> 


                </div>
    
    
    
    
    
    
    
                <div class="mb-3">
                <button class="btn btn-success">Save changes</button>
                </div>
            </form>
            <footer>
                <a href="/campgrounds">All Campgrounds</a>
            </footer>
        </div>
    </div>
