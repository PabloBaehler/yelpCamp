<% layout('layouts/boilerplate')%>
   
<div class="row">

    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
    
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campgroundaaaaaaa[title]" required>
            </div>
    
            <div class="mb-3">
    
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campgroundaaaaaaa[location]"required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label" >Add Images</label>
                <input class="form-control" type="file" name="image" id="Images" multiple>
              </div>
            


            <!-- <div class="mb-3">
    
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="campgroundaaaaaaa[image]"required>
            </div> -->
            <div class="mb-3">
                <label for="price">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" placeholder="0.00" id="price" name="campgroundaaaaaaa[price]"required>
            </div>
            </div>

            <div class="mb-3">
    
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campgroundaaaaaaa[description]"required></textarea>
            </div>








            <div class="mb-3">
            <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <footer>
            <a href="/campgrounds">All Campgrounds</a>
        </footer>
    </div>
</div>



